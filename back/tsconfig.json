{
    "compilerOptions": {
      "baseUrl": ".",
      "lib": [
        "es2016"
      ],
      "paths": {
        "*": [
          "src/*"
        ],
        "domain/*": [
          "src/domain/*"
        ],
        "application/*": [
          "src/application/*"
        ],
        "infrastructure/*": [
          "src/infrastructure/*"
        ],
        "adapters/*": [
          "src/adapters/*"
        ]
      },
      "allowJs": false,
      "target": "es2016",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "typeRoots": [
        "./node_modules/@types",
        "src/infrastructure/@types"
      ],
      "esModuleInterop": true
    },
    "include": [
      "./src/**/*.ts",
      "./test/**/*.test.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.js"
    ]
  }